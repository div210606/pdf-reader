{
  "name": "pdf-reader-app",
  "version": "1.0.0",
  "description": "A modern PDF reader with annotations and productivity features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-linux-all": "./build-linux-app.sh",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "keywords": [
    "pdf",
    "reader",
    "document",
    "viewer",
    "annotations",
    "epub"
  ],
  "author": "PDF Reader Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.pdfreader.app",
    "productName": "PDF Reader",
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "pdf-reader"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "app.js",
      "updater.js",
      "splash.html",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
